@page
@model MyApp.Namespace.newPageModel
@{
    ViewData["Title"] = "New Page";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Page</title>
    <script src="~/js/toggleElements.js" defer></script>
    <script src="~/js/calculateSum.js" defer></script>
    <style>
        .hidden {
            display: none;
        }

        
        #sumForm {
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        #sumForm input {
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        #calculate {
            padding: 8px 15px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        #calculate:hover {
            background-color: #0056b3;
        }
        #sumResult {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>New Page</h1>

    <!-- Toggle Elements Button -->
    <button id="toggleButton">Toggle Elements</button>
    <div class="toggle-element">
        <p>This is an element to be toggled.</p>
    </div>
    <div class="toggle-element">
        <p>This is another element to be toggled.</p>
    </div>

    <!-- Calculate Sum Button -->
    <button id="sumButton">Calculate Sum</button>
    <form id="sumForm" class="hidden">
        <input type="text" id="num1" placeholder="Enter number 1"><br>
        <input type="text" id="num2" placeholder="Enter number 2"><br>
        <button type="button" id="calculate">Calculate</button>
        <p id="sumResult"></p>
    </form>
</body>
